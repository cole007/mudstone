{
  "baseDir": "./tmp/public",
  "src": "./src",
  "dest": "./tmp/public",
  "dist": "./tmp/public/dist",
	"build": "./deploy/public",

	"browserSync": {
		"server": {
			"baseDir": "tmp/public",
      "index": "index.html"
		}
	},

  "html": {
    "src": "html/nunjucks",
    "dest": "./"
  },

	"twig": {
		"src": "../deploy/craft/templates",
		"dest": "../deploy/craft/templates"
	},

  "staticAssets": {
    "src": "static",
    "dest": "dist/static"
  },

  "js": {
    "src": "assets/js",
    "dest": "dist/js",
		"libs": [
			"./node_modules/jquery/dist/jquery.min.js",
			"./node_modules/picturefill/dist/picturefill.min.js"
		]
  },

  "json": {
    "src": "js/json",
    "dest": "./"
  },

  "scss": {
    "src": "assets/scss",
    "dest": "dist/css",
		"inlineSVG": "images/svg-assets"
  },

	"tokens": {
		"src": "tokens",
		"files": [
			"colors.json",
			"dimensions.json"
		],
		"dest": "assets/scss/_config"
	},

  "cssFonts": {
    "src": "assets/scss",
    "dest": "dist/css"
  },

  "images": {
    "src": "assets/images/site",
    "dest": "dist/images"
  },

  "fonts": {
    "src": "assets/fonts",
    "dest": "dist/fonts"
  },

  "symbols": {
    "src": "assets/images/svg-symbols",
    "dest": "dist/images",
    "fileName": "symbols.njk",
    "fileDest": "html/nunjucks/includes"
  },

	"sprites": {
    "src": "assets/images/svg-sprites",
    "dest": "dist/images"
	},

  "svgs": {
    "src": "assets/images/svg-assets",
    "dest": "dist/images"
  },

  "favicons": {
    "src": "assets/favicons",
    "dest": "./"
  },

  "tags": {
    "src": "./tmp/public/*.html",
    "dest": "./tmp/public/",
    "css": "/dist/css/",
    "js": "/dist/js/"
  }
}
