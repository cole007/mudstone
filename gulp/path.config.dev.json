{
  "baseDir": "./tmp/public",
  "src": "./src",
	"dest": "./tmp/public",
	"dist": "./tmp/public/dist",

	"browserSync": {
		"server": {
			"baseDir": "tmp/public",
      "index": "index.html"
		}
	},

  "html": {
    "src": "html/nunjucks",
    "dest": "./"
  },

	"twig": {
		"src": "../deploy/craft/templates",
		"dest": "../deploy/craft/templates"
	},

  "staticAssets": {
    "src": "static",
    "dest": "dist/static"
  },

  "js": {
    "src": "js",
    "dest": "dist/js",
		"libs": [
			"./node_modules/jquery/dist/jquery.min.js",
			"./node_modules/picturefill/dist/picturefill.min.js"
		]
  },

	"inline": {
		"src": [
			"./node_modules/fg-loadjs/loadJS.js",
			"./node_modules/fg-loadcss/src/loadCSS.js",
			"./node_modules/fg-loadcss/src/cssrelpreload.js"
		],
		"output": "shell.njk",
		"path": "./src/html/nunjucks/layout/"
	},

  "json": {
    "src": "js/json",
    "dest": "./"
  },

  "scss": {
    "src": "scss",
    "dest": "dist/css"
  },

  "cssFonts": {
    "src": "scss",
    "dest": "dist/css"
  },

  "images": {
    "src": "images/site",
    "dest": "dist/images"
  },

  "fonts": {
    "src": "fonts",
    "dest": "dist/fonts"
  },

  "symbols": {
    "src": "images/svg-symbols",
    "dest": "dist/images",
    "fileName": "symbols.njk",
    "fileDest": "html/nunjucks/includes"
  },

	"sprites": {
    "src": "images/svg-sprites",
    "dest": "dist/images"
	},

  "svgs": {
    "src": "images/svg-assets",
    "dest": "dist/images"
  },

  "favicons": {
    "src": "favicons",
    "dest": "./"
  },

	"tokens": {
		"src": "tokens",
		"files": [
			"colors.json",
			"fonts.json",
			"breakpoints.json"
		],
		"dest": "assets/scss/_config"
	},

  "tags": {
    "src": "./tmp/public/*.html",
    "dest": "./tmp/public/",
    "css": "/dist/css/",
    "js": "/dist/js/"
	},
	
	"critical": {
		"templates": "./src/public",
		"paths": [
			{ "url": "index.html", "template": "index.html"},
			{ "url": "a.html", "template": "a.html"},
			{ "url": "b.html", "template": "b.html"},
			{ "url": "c.html", "template": "c.html"}
		]
	}
}
